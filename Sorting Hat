# Sorting Hat
Slytherin = 0
Gryffindor = 0
Ravenclaw = 0
Hufflepuff = 0
print("Q1) Do you like Dawn or Dusk?"
"1) Dawn"
"2) Dusk")
result = int(input('Enter your answer (1-4): '))
if result == 1:
  Slytherin = Slytherin + 1
  Hufflepuff = Hufflepuff + 1
elif result == 2:
  Gryffindor = Gryffindor + 1
  Ravenclaw = Ravenclaw + 1
else:
  print("Wrong output")

print("Q2) When Iâ€™m dead, I want people to remember me as:"
    "1) The Good"
    "2) The Great"
    "3) The Wise"
    "4) The Bold")
result1 = int(input('Enter your answer (1-4): '))
if result1 == 1:
  Hufflepuff = Hufflepuff + 2
elif result1 == 2:
  Slytherin = Slytherin + 2
elif result1 == 3:
  Ravenclaw = Ravenclaw + 2
elif result1 == 4:
  Gryffindor = Gryffindor + 2
else:
  print("Wrong input")

print("Q3) Which kind of instrument most pleases your ear?"
    "1) The violin"
    "2) The trumpet"
    "3) The piano"
    "4) The drum")
result2 = int(input('Enter your answer (1-4): '))
if result2 == 1:
  Slytherin = Slytherin + 4
elif result1 == 2:
  Hufflepuff = Hufflepuff + 4
elif result1 == 3:
  Ravenclaw = Ravenclaw + 4
elif result1 == 4:
  Gryffindor = Gryffindor + 4
else:
  print("Wrong output")
print(f"Ravenclaw:  {Ravenclaw}")
print(f"Gryffindor: {Gryffindor}")
print(f"Slytherin: {Slytherin}")
print(f"Hufflepuff : {Hufflepuff}")
